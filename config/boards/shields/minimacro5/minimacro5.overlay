/ {
	chosen {
		zmk,kscan = &kscan0;
	};

	kscan0: kscan_0 {
		compatible = "zmk,kscan-gpio-direct";

		label = "KSCAN";

		input-gpios
			= <&gpio 21 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
			, <&gpio 10 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
			, <&gpio 16 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
			, <&gpio 6 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
			, <&gpio 8 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
			;

	};

	// TODO: Per-key LED node(s)
};